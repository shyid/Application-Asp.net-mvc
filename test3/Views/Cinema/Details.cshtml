@model test3.Models.Cinema

@{
    ViewData["Title"] = "Details for Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FullName </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div >

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="LogoPicturePreview"  class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label" name="Logo" readonly >Logo</label>
                        <input asp-for="Logo" class="form-control" name="Logo" placeholder="Logo" readonly />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label" name="FullName" readonly >Name</label>
                        <input asp-for="FullName" class="form-control"  name="FullName" placeholder="FullName" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label  asp-for="Discription" class="control-label" name="Discription" readonly >Discription</label>
                        <input  asp-for="Discription" class="form-control" name="Discription" placeholder="Discription" readonly />
                        <span  asp-validation-for="Discription" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input  type="submit" value="Edit" class="btn btn-outline-success float-right" onclick="location.href='@Url.Action("Edit", "Cinema" ,  new {id=Model.Id })'" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>

        $(document).ready(function () {
            var output = document.getElementById('LogoPicturePreview');
            output.src = $("#Logo").val();
        })

    </script>
}